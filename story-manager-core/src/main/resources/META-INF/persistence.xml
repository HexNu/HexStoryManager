<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="story-managerPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>nu.hex.story.manager.core.domain.atlas.impl.DefaultAtlas</class>
    <class>nu.hex.story.manager.core.domain.atlas.impl.DefaultMap</class>
    <class>nu.hex.story.manager.core.domain.image.impl.DefaultCover</class>
    <class>nu.hex.story.manager.core.domain.image.impl.DefaultIllustration</class>
    <class>nu.hex.story.manager.core.domain.image.impl.DefaultImage</class>
    <class>nu.hex.story.manager.core.domain.image.impl.DefaultPortrait</class>
    <class>nu.hex.story.manager.core.domain.person.impl.DefaultPersonalEvent</class>
    <class>nu.hex.story.manager.core.domain.person.impl.DefaultPerson</class>
    <class>nu.hex.story.manager.core.domain.rpg.character.AbstractPlayingCharacter</class>
    <class>nu.hex.story.manager.core.domain.rpg.character.dnd.impl.DnDAbilityScore</class>
    <class>nu.hex.story.manager.core.domain.rpg.character.dnd.impl.DnDPlayingCharacter</class>
    <class>nu.hex.story.manager.core.domain.rpg.character.dnd.impl.DnDStats</class>
    <class>nu.hex.story.manager.core.domain.rpg.player.impl.DefaultPlayer</class>
    <class>nu.hex.story.manager.core.domain.story.impl.DefaultChapter</class>
    <class>nu.hex.story.manager.core.domain.story.impl.DefaultFootnote</class>
    <class>nu.hex.story.manager.core.domain.story.impl.DefaultStory</class>
    <class>nu.hex.story.manager.core.domain.story.impl.DefaultPlot</class>
    <class>nu.hex.story.manager.core.domain.story.impl.DefaultPlotItem</class>
    <properties>
      <property name="hibernate.connection.username" value="venus"/>
      <property name="hibernate.connection.password" value="venus"/>
      <property name="hibernate.connection.autocommit" value="false"/>
      <property name="hibernate.generate_statistics" value="true"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.connection.provider_class" value="org.hibernate.service.jdbc.connections.internal.C3P0ConnectionProvider"/>
      <property name="hibernate.c3p0.max_size" value="10"/>
      <property name="hibernate.c3p0.min_size" value="1"/>
      <property name="hibernate.c3p0.acquire_increment" value="1"/>
      <property name="hibernate.c3p0.idle_test_period" value="300"/>
      <!-- 5 min -->
      <property name="hibernate.c3p0.timeout" value="1800"/>
      <!-- 30 min -->
      <property name="hibernate.show_sql" value="true"/>
      <!-- 30 min -->
    </properties>
  </persistence-unit>
</persistence>
