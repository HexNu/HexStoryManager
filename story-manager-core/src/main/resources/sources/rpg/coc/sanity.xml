<sanity>
    <insanities>
        <temporary>
            <insanity id="1" description="Fainting or screaming fit"/>
            <insanity id="2" description="Flees in panic"/>
            <insanity id="3" description="Physical hysterics or emotional outburst (laughing, crying, ect."/>
            <insanity id="4" description="Babling, incoherent, rapid speach, or logorhea (a torrent of coherent speech)"/>
            <insanity id="5" description="Intense phobia, perhaps rooting investigator to the spot."/>
            <insanity id="6" description="Homicidal or suicidal mania"/>
            <insanity id="7" description="Hallucinations or delusions"/>
            <insanity id="8" description="Echopraxia or echolalia (investigator does/says what others around him do/say)"/>
            <insanity id="9" description="Strange or deviant eating desire (dirt, slime, cannibalism, ect.)"/>
            <insanity id="10" description="Stupor (assumes foetal position, oblivious to events) or catatonia (can stand but has no will or interest; may be led or forced to simple actions but takes no independent action)"/>
        </temporary>
        <indefinite>
            <insanity id="1" description="Amnesia (memories of intimates usually lost first; language and physical skills engaged, but intellectural skills absent) or stupor/cataonia"/>
            <insanity id="2" description="Severe phobia (can flee, but sees object of obsession everywhere)"/>
            <insanity id="3" description="Hallucinations"/>
            <insanity id="4" description="Strange sexual desires (exhibitionism, nymphomania or satyriasis, teraphilia, ect.)"/>
            <insanity id="5" description="Fetish (investigator latches onto some object, type of object, or person as a safety blankey)"/>
            <insanity id="6" description="Uncontrollable tics, tremors, or inability to communicate via speech or writing"/>
            <insanity id="7" description="Psychosomatic blindness, deafness, or loss of the use of a limb or limb."/>
            <insanity id="8" description="Brief reactive pyschosis (incoherence, delusions, aberrant behavior, and/or hallucinations)"/>
            <insanity id="9" description="Temporary paranoia"/>
            <insanity id="10" description="Compulsive rituals (washing hands constantly, praying, walking in a particular rhythm, never stepping on cracks, checking one’s gun constantly, ect.)"/>
        </indefinite>
    </insanities>
